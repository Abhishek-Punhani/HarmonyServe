<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="store-body">
        <% if(cart[0]){
     for(product of cart){ %>
        <a class="item" href="/store/<%=product._id%>">
            <div class="card shopping-card" style="width: 18rem;">
                <img src="<%=product.image.url%>" class="card-img-top" alt="listing_image">
                <div class="card-body">
                  <p class="card-text"> <h5><%=product.title%></h5>
                    
                    &#8377; <%=product.price.toLocaleString("en-IN")%>
                </p>
                </div>
              </div>
        </a>
   <% }
      }else{  %> 
        <h2 style="margin: 4rem auto;">NO RESULTS FOUND!</h2>
     <% } %>  
    </div>
</body>